<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="fa">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title>Installation Serials Template</title>
    <link rel="preconnect" href="https://cdnjs.cloudflare.com">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/vazir-font/27.2.1/font-face.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
          rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lalezar&family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
          rel="stylesheet">
    <style type="text/css">
        html {
            direction: rtl;
        }

        * {
            box-sizing: border-box;
        }

        body {
            /*background: green;*/
        }

        .bg-red {
            /*background: red;*/
        }

        .bg-blue {
            /*background: blue;*/
        }

        .page-break {
            page-break-before: always;
        }

        .font-roboto-mono {
            font-family: "Roboto Mono", monospace;
            font-optical-sizing: auto;
        }

        .font-vazir {
            font-family: Vazir, Roboto, Oxygen-Sans, Ubuntu, Cantarell, "Helvetica Neue", sans-serif;
        }

        .label {
            /*border-radius: 14px;*/
            /*background: #e9e9e9;*/
            position: relative;
        }

        .nowrap {
            white-space: nowrap;
        }

        .time > img, .product > img, .price img {
            display: block;
            padding: 0;
            margin: 0;
        }
    </style>
    {% block head %}{% endblock %}
</head>
<body>
{% for chunk in chunks %}
    <div class="container">
        <table class="labels">
            {% for items in chunk %}
                <tr>
                    {% for item in items %}
                        <td class="label font-vazir">
                            <div class="aside bg-red">
                                <div class="time">
                                    <img src="{{ expiration|raw }}" width="52" alt="svg">
                                </div>
                                <div class="date nowrap">{{ item.date|raw }}</div>
                            </div>
                            <div class="main bg-blue">
                                <div class="serial font-roboto-mono">{{ item.serial|raw }}</div>
                                <div class="product">
                                    <img src="{{ subscription|raw }}" width="95%" alt="svg">
                                </div>
                                <div class="price">
                                    <img src="{{ free|raw }}" width="25%" alt="svg">
                                    <img src="{{ price|raw }}" width="65%" alt="svg">
                                </div>
                            </div>
                        </td>
                    {% endfor %}
                </tr>
            {% endfor %}
        </table>
    </div>
    {% if not loop.last %}
        <div class="page-break"></div>
    {% endif %}
{% endfor %}
</body>
</html>
